<form class="{{cssClass}} v-sheet v-abilitysheet" autocomplete="off">

  <!-- HEADER -->
  <header class="v-abilitysheet__header">
    <div class="v-abilitysheet__headrow">
      <input
        class="v-abilitysheet__name"
        type="text"
        name="name"
        value="{{item.name}}"
        placeholder="Название способности"
      />

      <div class="v-abilitysheet__lvl">
        <span class="v-abilitysheet__lvltag">L</span>
        <input
          class="v-abilitysheet__lvlinput"
          type="number"
          name="system.level"
          value="{{system.level}}"
          data-dtype="Number"
          min="0"
          max="6"
        />
      </div>
    </div>
  </header>

  <!-- BODY: 2 columns -->
  <section class="v-abilitysheet__body">
    <!-- LEFT -->
    <aside class="v-abilitysheet__left">
      <img
        class="v-abilitysheet__img"
        src="{{item.img}}"
        data-edit="img"
        title="Нажмите, чтобы изменить иконку"
      />

      <div class="v-abilitysheet__cost">
        <div class="v-abilitysheet__costlabel">Стоимость</div>
        <div class="v-abilitysheet__costrow">
          <input
            class="v-abilitysheet__costinput"
            type="number"
            name="system.cost"
            value="{{system.cost}}"
            data-dtype="Number"
            min="0"
            max="6"
          />
          <span class="v-abilitysheet__costsuffix">вдохн.</span>
        </div>
      </div>

      <div class="v-abilitysheet__actions">
        <label class="v-check">
          <input type="checkbox" name="system.active" {{#if system.active}}checked{{/if}}>
          <span>Активно</span>
        </label>
        <button
          type="button"
          class="v-mini"
          data-action="edit-effects"
        >
          Эффекты
        </button>
      </div>
    </aside>

    <!-- RIGHT -->
    <main class="v-abilitysheet__right">
      <div class="v-abilitysheet__descrhead">Описание</div>
      <textarea
        class="v-abilitysheet__desc"
        name="system.description"
        placeholder="Коротко и по делу: что делает способность."
      >{{system.description}}</textarea>
    </main>
  </section>

</form>

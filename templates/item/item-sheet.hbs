<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <h1 class="charname">
      <input
        type="text"
        name="name"
        value="{{item.name}}"
        placeholder="Название предмета"
      />
    </h1>
  </header>

  <section class="sheet-body">
    <div class="form-group">
      <label>Количество</label>
      <input
        type="number"
        name="system.quantity"
        value="{{item.system.quantity}}"
        min="0"
      />
    </div>

    <div class="form-group">
      <label
        style="display:flex; align-items:center; justify-content:space-between; gap:8px;"
      >
        <span>Описание</span>
        <button type="button" data-action="edit-description">
          Редактировать описание
        </button>
      </label>

      <div
        style="white-space: pre-wrap; padding: 8px; border: 1px solid rgba(255,255,255,0.12); border-radius: 8px; min-height: 140px;"
      >
        {{#if item.system.description}}
          {{item.system.description}}
        {{else}}
          <span style="opacity:0.7;">(Описание не задано)</span>
        {{/if}}
      </div>
    </div>
  </section>
</form>